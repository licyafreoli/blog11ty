{% extends "layouts/base.njk" %}

{% block content %}
  <h1>Posts Recentes</h1>
  
  <ul>
    {% for post in collections.posts %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a> - 
        <time datetime="{{ post.date }}">{{ post.date | date("yyyy-MM-dd") }}</time>
      </li>
    {% endfor %}
  </ul>

{% endblock %}

